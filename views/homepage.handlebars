{{!-- where i render my homeroute to my landing page --}}

{{#each blog}}
    <div class="post">
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <small>Blogger {{this.user.username}} on {{this.createdAt}}</small>
    </div>
    <button><a href="/blog/{{this.id}}">VIEW</a></button>
{{else}}
    <p>No blogs found.</p>
{{/each}}