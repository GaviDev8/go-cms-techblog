 <section class="wrapper">
<section class="form-wrapper sign-up">
            <form action="" class="signup-form">
                <h2>Sign Up</h2>
                <section class="input-group">
                    <input type="text" id="username-signup" required>
                    <label for="">Username</label>
                </section>
                <section class="input-group">
                    <input type="text" id="email-signup" required>
                    <label for="">Email</label>
                </section>
                <section class="input-group">
                    <input type="password" id="password-signup" required>
                    <label for="">Password</label>
                </section>
                <button type="submit" class="btn">Sign Up</button>
                
            </form>
        </section>
        <section class="form-wrapper sign-in">
            <form action="" class="login-form">
                <h2>Login</h2>
                <section class="input-group">
                    <input type="text" id="username-login" required>
                    <label for="">Username</label>
                </section>
                <section class="input-group">
                    <input type="password" id="password-login" required>
                    <label for="">Password</label>
                </section>
                <button type="submit" class="btn">Login</button>
            </form>
        </section>
    </section>
    <script src="/js/signup.js"></script>
    <script src="/js/login.js"></script>